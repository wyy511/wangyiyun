.playlist-wrap {
    width: 100%;
    padding-top: 20rpx;
    font-size: 28rpx;
    color: #2e3030;
}

.hotsong {
    width: 100%;
}
.hotsong-item {
    padding: 20rpx;
}
.img {
    width: 200rpx;
    height: 200rpx;
    border-radius: 10rpx;
}
.img, .song-wrap {
    display: inline-block;
    vertical-align: top;
}
.song-wrap {
    line-height: 30rpx;
    padding-left: 40rpx;
}
.song-item {
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
    line-height: 30px;
}