.playlist-wrap {
    width: 100%;
    padding-top: 20rpx;
    font-size: 28rpx;
    color: #2e3030;
}

.hotsong {
    width: 100%;
}
.hotsong-item {
    padding: 20rpx;
    display: -ms-flexbox;
    display: flex;
}
.img {
    width: 200rpx;
    height: 200rpx;
    border-radius: 10rpx;
    -ms-flex: 0 0 100px;
    flex: 0 0 100px;
}
.img, .song-wrap {
    display: inline-block;
    vertical-align: top;
}
.song-wrap {
    line-height: 30rpx;
    padding-left: 40rpx;
    
    -ms-flex: 1;
    flex: 1;
    display: -ms-flexbox;
    display: flex;
    -ms-flex-direction: column;
    flex-direction: column;
    -ms-flex-pack: center;
    justify-content: center;
}
.song-item {
    
    line-height: 30px;
}
.song-list {
    width: 500rpx;
    word-break: keep-all;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}