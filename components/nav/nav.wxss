.navs {
    width: 100%;
    height: 80rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: center;
    -webkit-justify-content: center;
    justify-content: center;
    -webkit-box-align: center;
    -webkit-align-items: center;
    align-items: center;
    background-color: #fff;
}

.nav-item {
    -webkit-box-flex: 1;
    -webkit-flex: 1;
    flex: 1;
    width: 33.3%;
    text-align: center;
    line-height: 80rpx;
}

.nav-item.active {
    color: #d43c33;
}

.nav-title {
    font-size: 30rpx;
    position: relative;
    display: inline;
    height: 100%;
    padding: 0 10rpx;
}

.nav-item.active .nav-title::after {
    content: "";
    position: absolute;
    left: 0;
    right: 0;
    bottom: -20rpx;
    border-bottom: 4rpx solid #d43c33;
}