.playlist-wrap {
    width: 100%;
    padding-top: 20rpx;
}

.playlist-title {
    position: relative;
    font-size: 30rpx;
    margin-left: 20rpx;
    padding-left: 30rpx;
}

.playlist-title::before {
    content: "";
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 4rpx;
    background-color: #d43c33;
}

.playlist-list {
    margin-top: 20rpx;
}

.playlist-item {
    position: relative;
    float: left;
    width: 30.6%;
    margin-bottom: 30rpx;
    padding: 0 1%;
}

.playlist-item:nth-child(3n+1) {
    padding-left: 2%;
    padding-right: 1%;
}

.playlist-item .img {
    width: 100%;
    height: 232rpx;
}

.playlist-text {
    height: 70rpx;
    font-size: 26rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: wrap;
    -webkit-line-clamp: 2;
    display: -webkit-box;
    -webkit-box-orient: vertical;
}

.ear {
    position: absolute;
    top: 10rpx;
    right: 10rpx;
    color: #fff;
    font-size: 26rpx;
    padding-left: 32rpx;
    line-height: 26rpx;
    background: no-repeat url(data:image/svg+xml;base64,);
}