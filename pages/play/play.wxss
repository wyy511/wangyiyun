@import '../../static/font/iconfont.wxss';
.play-page {
  position: relative;
  width: 100%;
  height: 100%;
  overflow: hidden;
  text-align: center;
  
}
.play-bg {
  filter: blur(30px);
  opacity: 0.6;
}
.img-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
}
.black-lay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}
.header {
  margin-top: 40rpx;
  filter: blur(0px);
  opacity: 1;
}
.header .name{
  color: rgba(255, 255, 255, 0.8);
  font-size: 50rpx;
}
.header .title{
  color: rgba(255, 255, 255, 0.5);
  font-size: 30rpx;
}
.content {
  width: 600rpx;
  height: 600rpx;
  text-align: center;
  line-height: 600rpx;
  position: absolute;
  top: 15%;
  left: 50%;
  transform: translateX(-50%);
}
.content .cover{
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: #919595;
  filter: blur(0px);
  opacity: 1;
  overflow: hidden;
  /* -webkit-animation: rotate 8s linear infinite;
  animation: rotate 8s linear infinite;   */
}
.content .img {
  width: 520rpx;
  height: 520rpx;
  margin-top: 40rpx;
  border-radius: 50%;
  overflow: hidden;
}
