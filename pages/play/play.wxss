.footer {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 160rpx;
}
.control-wrap {
  width: 100%;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -ms-flex-align: center;
  align-items: center;
}
.control-wrap .way {
  -webkit-box-flex: 1;
  -ms-flex: 1;
  flex: 1;
  color: #f1f1f1;
}
.control-wrap .way .icon {
  font-size: 44rpx;
}

.control-wrap .shunxu, .control-wrap .houtui {
  text-align: right;
}
.control-wrap .play {
  text-align: center;
  margin: 0 40rpx;
}
.control-wrap .play .icon {
  font-size: 80rpx;
}
.control-wrap .qianjin, .control-wrap .love {
  text-align: left;
}
.control-wrap .qianjin .icon, .control-wrap .houtui .icon {
  font-size: 50rpx;
}