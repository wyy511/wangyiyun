.detail-wrap {
    width: 100%;
    height: 100%;
}

.header {
    width: 100%;
    height: 660rpx;
    position: relative;
}

.header .cover {
    width: 100%;
    height: 100%;
}

.header .black-lay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: black;
    opacity: 0.2;
}

.header .text {
    position: absolute;
    bottom: 20rpx;
    left: 20rpx;
    color: #fff;
    font-size: 30rpx;
    line-height: 40rpx;
}

.header .ear {
    color: #fff;
    font-size: 26rpx;
    padding-left: 32rpx;
    line-height: 26rpx;
    background: no-repeat url(data:image/svg+xml;base64,);
}

.content .all {
    height: 80rpx;
    color: #000;
    font-size: 34rpx;
    padding: 0rpx 40rpx;
    line-height: 80rpx;
}

.content .all .count {
    color: rgba(126, 120, 120, 0.8);
    font-size: 30rpx;
}

.content .play-icon {
    width: 30rpx;
    height: 30rpx;
}

.detail-item {
    height: 120rpx;
    color: rgba(126, 120, 120, 0.8);
    padding: 0rpx 40rpx;
    border-top: 1px solid rgba(126, 120, 120, 0.5);
}

.detail-item:last-child {
    height: 120rpx;
    color: rgba(126, 120, 120, 0.8);
    padding: 0rpx 40rpx;
    border-bottom: 1px solid rgba(126, 120, 120, 0.5);
}

.detail-item .num,
.detail-item .des {
    display: inline-block;
}

.detail-item .des {
    height: 100%;
    padding-top: 26rpx;
    vertical-align: middle;
}

.detail-item .title,
.detail-item .subtitle {
    display: block;
}

.detail-item .num {
    padding-right: 40rpx;
}

.detail-item .title {
    color: #000;
    font-size: 32rpx;
}

.detail-item .subtitle {
    font-size: 22rpx;
}